<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.findnearest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.findnearest.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.findnearest.ItemArrayAdapter"
            android:label="@string/title_activity_item_array_adapter" >
        </activity>
        <activity
            android:name="com.example.findnearest.GooglePlaces"
            android:label="@string/title_activity_google_places" >
        </activity>
        <activity
            android:name="com.example.findnearest.GooglePlace"
            android:label="@string/title_activity_google_place" >
        </activity>
        <activity
            android:name="com.example.findnearest.AppPreferences"
            android:label="@string/title_activity_App_preferences" >
        </activity>
    </application>

</manifest>